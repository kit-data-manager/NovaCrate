{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext", "webworker", "dom.asynciterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ES2015",
    "outDir": "public/schema-worker"
  },
  "include": ["lib/schema-worker/**/*.ts", "lib/opfs-worker/**/*.ts", "lib/data-types.d.ts", "lib/utils.ts", "lib/function-worker.ts", "lib/CrateServiceProvider.ts", "lib/state/schema-resolver.ts"],
  "exclude": ["node_modules"],
}
